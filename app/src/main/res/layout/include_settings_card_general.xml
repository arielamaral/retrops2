<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="General"
            android:textColor="?attr/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_fsui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Fullscreen UI"
            app:useMaterialThemeColors="true" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_frame_limiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Frame Limiter"
            app:useMaterialThemeColors="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fps_limit_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom FPS Limit: 60"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sb_fps_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="60"
                android:valueFrom="30"
                android:valueTo="180"
                android:stepSize="1"
                app:haloRadius="16dp"
                app:labelBehavior="gone"
                app:tickVisible="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Aspect Ratio"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/sp_aspect_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/sw_fast_boot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Fast Boot"
            app:useMaterialThemeColors="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/sw_record_logs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_record_logs"
                app:useMaterialThemeColors="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/settings_record_logs_summary"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_brightness_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brightness: 1.00"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sb_brightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="100"
                android:valueFrom="0"
                android:valueTo="200"
                android:stepSize="1"
                app:haloRadius="16dp"
                app:labelBehavior="gone"
                app:tickVisible="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_osc_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_osc_timeout_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On-screen controls timeout: 3s"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sb_osc_timeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="3"
                android:valueFrom="1"
                android:valueTo="60"
                android:stepSize="1"
                app:haloRadius="16dp"
                app:labelBehavior="gone"
                app:tickVisible="false" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/sw_osc_never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Never hide on-screen controls"
                app:useMaterialThemeColors="true" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
