<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_content_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/drawer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="In-game options"
            android:textColor="?attr/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/drawer_btn_reboot"
                style="?attr/floatingActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/drawer_reboot_content_description"
                app:backgroundTint="?attr/colorSurfaceVariant"
                app:tint="?attr/colorOnSurface"
                app:materialThemeOverlay="@style/ThemeOverlay.Material3.MaterialAlertDialog"
                app:srcCompat="@drawable/ic_reboot" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/drawer_btn_pause"
                style="?attr/floatingActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/drawer_pause_content_description"
                app:backgroundTint="?attr/colorSurfaceVariant"
                app:tint="?attr/colorOnSurface"
                app:materialThemeOverlay="@style/ThemeOverlay.Material3.MaterialAlertDialog"
                app:srcCompat="@drawable/ic_pause_circle" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/drawer_btn_fast_forward"
                style="?attr/floatingActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/drawer_fast_forward_content_description"
                app:backgroundTint="?attr/colorSurfaceVariant"
                app:tint="?attr/colorOnSurface"
                app:materialThemeOverlay="@style/ThemeOverlay.Material3.MaterialAlertDialog"
                app:srcCompat="@drawable/ic_fast_forward" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/drawer_btn_power"
                style="?attr/floatingActionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/drawer_power_content_description"
                app:backgroundTint="?attr/colorSurfaceVariant"
                app:tint="?attr/colorOnSurface"
                app:materialThemeOverlay="@style/ThemeOverlay.Material3.MaterialAlertDialog"
                app:srcCompat="@drawable/ic_power" />

        </LinearLayout>

        <TextView
            android:id="@+id/drawer_ra_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="4dp"
            android:text="@string/drawer_ra_section_label"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/drawer_ra_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/drawer_ra_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/drawer_ra_icon_content_description"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/drawer_ra_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/drawer_ra_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/drawer_ui_scale_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="@string/drawer_ui_scale_label"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drawer_ui_scale_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="1.0x"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/drawer_slider_ui_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="1"
            android:valueFrom="0.2"
            android:valueTo="4"
            android:stepSize="0.2"
            android:layout_marginBottom="16dp"
            app:labelBehavior="gone"
            app:tickVisible="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Renderer"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/drawer_tg_renderer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/drawer_tb_at"
                style="@style/PSX2.ToggleButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:text="AT"
                android:textAllCaps="false"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/drawer_tb_gl"
                style="@style/PSX2.ToggleButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:text="GL"
                android:textAllCaps="false"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/drawer_tb_sw"
                style="@style/PSX2.ToggleButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:text="SW"
                android:textAllCaps="false"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/drawer_tb_vk"
                style="@style/PSX2.ToggleButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:text="VK"
                android:textAllCaps="false"
                android:textColor="?attr/colorPrimary" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawer_btn_games"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Games"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/stadia_controller_24px"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="src_in" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawer_btn_game_state"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Game State"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/save_24px"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="src_in" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="4dp"
            android:text="@string/drawer_section_mods"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/drawer_sw_enable_cheats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/drawer_enable_cheats"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawer_btn_import_cheats"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/drawer_action_import_cheats"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/ic_folder_24"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="src_in" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawer_btn_import_textures"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/drawer_action_import_textures"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/ic_image_24"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="src_in" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Aspect Ratio"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/drawer_sp_aspect_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Resolution Scale"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/drawer_sp_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Blending Accuracy"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/drawer_sp_blending_accuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Patches"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/drawer_sw_widescreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/drawer_apply_widescreen_patch"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/drawer_sw_no_interlacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="No Interlacing"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Textures"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/drawer_sw_load_textures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Load Textures"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/drawer_sw_async_textures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Async Textures"
            android:textColor="?attr/colorOnSurface" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/drawer_sw_precache_textures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Precache Texture Replacements"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Developer"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/drawer_sw_dev_hud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Dev: HUD overlay"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Controller"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="Controller Mode"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/drawer_sp_controller_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawer_btn_test_controller"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Test Controller Input"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="About"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawer_btn_settings"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Settings"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/ic_settings_24"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="src_in" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/drawer_btn_about"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="About ARMSX2"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/info_24px"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconSize="20dp"
            app:iconTint="?attr/colorPrimary"
            app:iconTintMode="src_in" />

    </LinearLayout>
</ScrollView>
